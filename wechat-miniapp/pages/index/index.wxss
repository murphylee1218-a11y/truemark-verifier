/* index.wxss - 首页样式 */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.loading {
  font-size: 32rpx;
  color: #666666;
}

.content {
  flex: 1;
  padding-bottom: 40rpx;
}

/* 顶部欢迎区域 */
.header {
  background: linear-gradient(135deg, #3498db, #2ecc71);
  padding: 40rpx;
  border-radius: 0 0 30rpx 30rpx;
  box-shadow: 0 5rpx 20rpx rgba(0, 0, 0, 0.1);
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.5);
  background-color: #ffffff;
}

.user-details {
  margin-left: 24rpx;
  color: #ffffff;
}

.welcome-text {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}

.sub-text {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 快速入口 */
.quick-access {
  display: flex;
  justify-content: space-around;
  padding: 40rpx 20rpx;
  background-color: #ffffff;
  margin: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.quick-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.quick-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 16rpx;
}

.quick-icon.verify {
  background-color: #e3f2fd;
}

.quick-icon.history {
  background-color: #f3e5f5;
}

.icon-text {
  font-size: 60rpx;
}

.quick-label {
  font-size: 28rpx;
  color: #666666;
}

/* 功能列表 */
.feature-section {
  margin-top: 20rpx;
  background-color: #ffffff;
  padding: 0 40rpx;
}

.section-title {
  padding: 30rpx 0 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.section-title text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.feature-list {
  padding: 20rpx 0;
}

.feature-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #f5f5f5;
}

.feature-item:last-child {
  border-bottom: none;
}

.feature-icon {
  width: 80rpx;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 24rpx;
}

.feature-icon image {
  width: 50rpx;
  height: 50rpx;
}

.feature-content {
  flex: 1;
}

.feature-title {
  font-size: 34rpx;
  color: #333333;
  display: block;
  margin-bottom: 8rpx;
}

.feature-desc {
  font-size: 26rpx;
  color: #999999;
}

.feature-arrow {
  color: #cccccc;
  font-size: 36rpx;
}

/* 推荐信息 */
.recommend-section {
  margin: 30rpx 20rpx 0;
}

.recommend-card {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333333;
}

.card-content {
  padding-left: 10rpx;
}

.card-text {
  display: block;
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.card-text:last-child {
  margin-bottom: 0;
}