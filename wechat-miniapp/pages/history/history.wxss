/* history.wxss - 验证历史页面样式 */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 页面标题 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  background-color: #ffffff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
}

.clear-btn {
  font-size: 32rpx;
  color: #3498db;
}

/* 历史记录列表 */
.history-list {
  flex: 1;
  padding: 0 40rpx 40rpx;
}

/* 历史记录项 */
.history-item {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.history-item:active {
  background-color: #f9f9f9;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.company-info {
  display: flex;
  align-items: center;
}

.company-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-right: 16rpx;
}

.status-badge {
  background-color: #d5f4e6;
  padding: 4rpx 16rpx;
  border-radius: 12rpx;
}

.status-badge.invalid {
  background-color: #fce5e5;
}

.status-text {
  font-size: 24rpx;
  color: #27ae60;
}

.status-text.invalid {
  color: #e74c3c;
}

.verify-time {
  font-size: 26rpx;
  color: #999999;
}

.item-content {
  margin-bottom: 20rpx;
}

.employee-name {
  display: block;
  font-size: 32rpx;
  color: #333333;
  margin-bottom: 8rpx;
}

.position {
  font-size: 28rpx;
  color: #666666;
}

.item-footer {
  border-top: 2rpx solid #f5f5f5;
  padding-top: 20rpx;
}

.verification-code {
  font-size: 28rpx;
  color: #999999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 34rpx;
  color: #999999;
  margin-bottom: 40rpx;
}

.go-verify-btn {
  background-color: #3498db;
  color: #ffffff;
  font-size: 32rpx;
  padding: 20rpx 60rpx;
  border-radius: 12rpx;
}

.go-verify-btn:active {
  background-color: #2980b9;
}

/* 加载状态 */
.load-more {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
}

.loading {
  font-size: 28rpx;
  color: #666666;
}

/* 没有更多 */
.no-more {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
}

.no-more-text {
  font-size: 28rpx;
  color: #999999;
}

/* 下拉刷新提示 */
.refresh-tip {
  position: absolute;
  top: 120rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 999;
  background-color: rgba(0, 0, 0, 0.5);
  padding: 16rpx 32rpx;
  border-radius: 20rpx;
}

.refresh-loading {
  color: #ffffff;
  font-size: 28rpx;
}